<!-- views/compras/ordenCompra.hbs -->

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Órdenes de Compra</title>
    <!-- Estilos CSS de Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Lista de Órdenes de Compra</h1>
        
        <!-- Botón para agregar orden de compra -->
        <a href="/compras/ordenCompra/agregarOrden" class="btn btn-primary mt-3 mb-3">Agregar Orden de Compra</a>
        
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Proveedor</th>
                    <th>Total</th>
                    <th>Acciones</th> <!-- Columna para acciones -->
                </tr>
            </thead>
            <tbody>
                {{#each ordenesCompra}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.fecha}}</td>
                        <td>{{this.proveedor}}</td>
                        <td>{{this.total}}</td>
                        <!-- Agregar enlaces para editar y eliminar la orden de compra -->
                        <td>
                            <a href="/compras/ordenCompra/editar/{{this.id}}" class="btn btn-primary">Editar</a>
                            <form action="/compras/ordenCompra/eliminar/{{this.id}}" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Scripts de Bootstrap (jQuery y Popper.js) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <!-- Script de Bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
